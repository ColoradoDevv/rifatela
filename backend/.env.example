# Required
JWT_SECRET=replace_with_a_long_random_secret
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace_with_supabase_service_role_key

# Database
# Use the service role key on backend only.
# Tables required: users, raffles, raffle_participants, saved_tickets

# CORS for browser requests to Railway API.
# Use comma-separated origins, example:
# CORS_ORIGIN=https://your-frontend.vercel.app,https://www.yourdomain.com
CORS_ORIGIN=true

# Cookie behavior for auth_token
# In production behind HTTPS, recommended:
# COOKIE_SECURE=true
# COOKIE_SAMESITE=none
# COOKIE_DOMAIN=
COOKIE_SECURE=
COOKIE_SAMESITE=
COOKIE_DOMAIN=

# Runtime
NODE_ENV=development
PORT=5000

# Local only: serve frontend routes/files from ../frontend/src
# Keep false/empty in Railway production API deployments.
SERVE_FRONTEND=
